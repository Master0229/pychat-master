[Unit]
Description=Websocket server on port %I
Requires=tornado.service
Before=tornado.service
BindsTo=tornado.service

[Service]
ExecStart=/srv/http/pychat/backend/.venv/bin/python /srv/http/pychat/backend/manage.py start_tornado --port %I --keep_online --host localhost
SyslogIdentifier=tornado-%i
SuccessExitStatus=30
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT
Restart=always
Type=simple
NotifyAccess=all
User=http

[Install]
WantedBy=tornado.service
