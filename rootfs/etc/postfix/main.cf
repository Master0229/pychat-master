queue_directory = /var/spool/postfix
mail_spool_directory = /var/spool/mail
command_directory = /usr/bin
daemon_directory = /usr/lib/postfix/bin
data_directory = /var/lib/postfix
mail_owner = postfix
myhostname = pychat.org
mydomain = pychat.org
myorigin = $mydomain
inet_interfaces = all
inet_protocols = ipv4
mydestination = $myhostname, localhost.$mydomain, localhost
unknown_local_recipient_reject_code = 550
mynetworks =  127.0.0.0/8, localhost, [::1]/128
relay_domains = 
alias_maps = hash:/etc/aliases
alias_database = hash:/etc/aliases
home_mailbox = Maildir/
debug_peer_level = 2
debugger_command =
	PATH=/bin:/usr/bin:/usr/local/bin:/usr/X11R6/bin
	ddd $daemon_directory/$process_name $process_id & sleep 5
sendmail_path = /usr/bin/sendmail
newaliases_path = /usr/bin/newaliases
mailq_path = /usr/bin/mailq
setgid_group = postdrop
html_directory = no
manpage_directory = /usr/share/man
sample_directory = /etc/postfix/sample
readme_directory = /usr/share/doc/postfix
## SSL
smtpd_use_tls = yes
smtpd_tls_auth_only = yes
smtpd_tls_key_file = /etc/letsencrypt/live/pychat.org/privkey.pem
smtpd_tls_cert_file = /etc/letsencrypt/live/pychat.org/fullchain.pem
smtpd_tls_loglevel = 1
meta_directory = /etc/postfix
shlib_directory = /usr/lib/postfix
virtual_alias_maps = hash:/etc/postfix/virtual,  regexp:/etc/postfix/virtual-regexp
relayhost = [smtprelay.kyivstar.ua]:25
smtpd_relay_restrictions = ${{$compatibility_level} < {1} ? {} : {permit_mynetwornauth_destination}}
smtpd_recipient_restrictions= permit_mynetworks, permit_sasl_authenticated, defer_unauth_destination
